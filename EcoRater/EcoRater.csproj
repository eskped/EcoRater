    <UserSecretsId>aspnet-EcoRater-dd01d53d-bbe7-4d70-bf57-fc1626cae6c5</UserSecretsId>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(RunConfiguration)' == 'https' " />
