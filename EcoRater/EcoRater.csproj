  <ItemGroup>
    <None Remove="Views\ProjectFirms\" />
    <None Remove="Views\Sustainability\" />
  </ItemGroup>
  <ItemGroup>
    <None Update="app.db" CopyToOutputDirectory="PreserveNewest" ExcludeFromSingleFile="true" />
  </ItemGroup>

  <ItemGroup>
