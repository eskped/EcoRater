@model ProjectFirm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewBag.Title = "Initial Questions";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <h2>Initial Questions</h2>
            <a href="@Url.Action("Index", "ProjectFirms")" class="btn btn-secondary btn-sm mr-3">Back</a>

            <form method="post" class="mt-4">

                <!-- Nature of the Business/Project -->
                <h4 class="mb-3">Nature of the Business/Project</h4>
                <div class="form-group">
                    <label for="Industry">What is the primary industry or sector of your business/project?</label>
                    <input type="text" value="@Model.Industry" class="form-control" id="Industry" name="Industry" placeholder="e.g., technology, manufacturing" required>
                </div>
                <div class="form-group">
                    <label for="BusinessNature">Is the business/project primarily online, offline, or a mix of both?</label>
                    <select asp-for="BusinessNature" class="form-control">
                        <option value="">Select</option>
                        <option value="Online">Online</option>
                        <option value="Offline">Offline</option>
                        <option value="Both">Both</option>
                    </select>


                </div>

                <!-- Scale & Geography -->
                <h4 class="mb-3 mt-5">Scale & Geography</h4>
                <div class="form-group">
                    <label for="BusinessSize">How would you describe the size of your business/project?</label>
                    <select asp-for="BusinessSize" class="form-control" id="BusinessSize" name="BusinessSize" required>
                        <option value="">Select</option>
                        <option value="Startup">Startup</option>
                        <option value="SME">SME</option>
                        <option value="LargeCorporation">Large Corporation</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="OperationalRegions">In which regions or countries does your business/project primarily operate?</label>
                    <input type="text" value="@Model.OperationalRegions" class="form-control" id="OperationalRegions" name="OperationalRegions" placeholder="e.g., Europe, USA, Global" required>
                </div>

                <!-- Supply Chain & Operations -->
                <h4 class="mb-3 mt-5">Supply Chain & Operations</h4>
                <div class="form-group">
                    <label for="ManufacturingInvolved">Does your business/project involve manufacturing or physical production of goods?</label>
                    <select asp-for="ManufacturingInvolved" class="form-control" id="ManufacturingInvolved" name="ManufacturingInvolved" required>
                        <option value="">Select</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="SourcingType">Do you source materials or products from outside suppliers? If so, are these local or international?</label>
                    <select asp-for="SourcingType" class="form-control" id="SourcingType" name="SourcingType" required>
                        <option value="">Select</option>
                        <option value="Local">Local</option>
                        <option value="International">International</option>
                        <option value="Both">Both</option>
                        <option value="None">None</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="ImpactOnLandUse">Do you have a direct impact on land use (e.g., farming, mining, construction)?</label>
                    <select asp-for="ImpactOnLandUse" class="form-control" id="ImpactOnLandUse" name="ImpactOnLandUse" required>
                        <option value="">Select</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>

                </div>

                <!-- Stakeholder & Employee Dynamics -->
                <h4 class="mb-3 mt-5">Employees</h4>
                <div class="form-group">
                    <label for="NumberOfEmployees">Approximately how many employees are part of your business/project?</label>
                    <input type="number" value="@Model.NumberOfEmployees" class="form-control" id="NumberOfEmployees" name="NumberOfEmployees" placeholder="e.g., 100" required>
                </div>

                <!-- Previous Sustainability Initiatives -->
                <h4 class="mb-3 mt-5">Previous Sustainability Initiatives</h4>
                <div class="form-group">
                    <label for="PreviousSustainabilityInitiatives">Has your business/project previously engaged in any sustainability initiatives or certifications?</label>
                    <select asp-for="PreviousSustainabilityInitiatives" class="form-control" id="PreviousSustainabilityInitiatives" name="PreviousSustainabilityInitiatives" required>
                        <option value="">Select</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>

                <div class="form-group mt-5">
                    <button type="submit" class="btn btn-primary mr-3">Submit</button>
                    <a href="@Url.Action("Index", "ProjectFirms")" class="btn btn-secondary">Back</a>  <!-- Adjust the action and controller names accordingly -->
                </div>
            </form>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
