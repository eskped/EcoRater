@model IEnumerable<EcoRater.Models.ProjectFirm>

<h2>Project Firms</h2>
<a href="@Url.Action("Create")">Add New Project Firm</a>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Region</th>
            <!-- Add other fields if needed -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Region</td>
                <!-- Add other fields if needed -->
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })">Delete</a> |
                    <a href="@Url.Action("Details", new { id = item.Id })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
