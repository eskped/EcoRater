@model ProjectFirm

<h2>Sustainability Rating for @Model.Name</h2> <!-- Assuming there's a FirmName property on your model -->

<div class="rating-container">
    <h3>Overall Rating:</h3>
    <p>@Model.OverallRating</p>

    <h3>Environmental Rating:</h3>
    <p>@Model.EnvironmentalRating</p>

    <h3>Social Rating:</h3>
    <p>@Model.SocialRating</p>

    <h3>Economic Rating:</h3>
    <p>@Model.EconomicRating</p>

    <h3>Future Recommendations and Overall Feedback:</h3>
    <p>@Model.FutureRecommendations</p>
</div>

