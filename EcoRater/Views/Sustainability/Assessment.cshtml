@model SustainabilityAssessment

@{
    ViewBag.Title = "Sustainability Assessment";
}

<div class="container mt-5">
    <h2>Sustainability Assessment</h2>

    <form method="post" class="mt-4">
        <!-- Nature of the Business/Project -->
        <div class="form-group">
            <label for="Industry">What is the primary industry or sector of your business/project?</label>
            <input type="text" class="form-control" id="Industry" name="Industry" placeholder="e.g., technology, manufacturing" required>
        </div>
        <div class="form-group">
            <label for="BusinessNature">Is the business/project primarily online, offline, or a mix of both?</label>
            <select class="form-control" id="BusinessNature" name="BusinessNature" required>
                <option value="">Select</option>
                <option value="Online">Online</option>
                <option value="Offline">Offline</option>
                <option value="Both">Both</option>
            </select>
        </div>

        <!-- Scale & Geography -->
        <div class="form-group">
            <label for="BusinessSize">How would you describe the size of your business/project?</label>
            <select class="form-control" id="BusinessSize" name="BusinessSize" required>
                <option value="">Select</option>
                <option value="Startup">Startup</option>
                <option value="SME">SME</option>
                <option value="LargeCorporation">Large Corporation</option>
            </select>
        </div>
        <div class="form-group">
            <label for="OperatingRegions">In which regions or countries does your business/project primarily operate?</label>
            <input type="text" class="form-control" id="OperatingRegions" name="OperatingRegions" placeholder="e.g., Europe, USA, Global" required>
        </div>

        <!-- Supply Chain & Operations -->
        <div class="form-group">
            <label for="Manufacturing">Does your business/project involve manufacturing or physical production of goods?</label>
            <select class="form-control" id="Manufacturing" name="Manufacturing" required>
                <option value="">Select</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>
        <div class="form-group">
            <label for="SourcingMaterials">Do you source materials or products from outside suppliers? If so, are these local or international?</label>
            <select class="form-control" id="SourcingMaterials" name="SourcingMaterials" required>
                <option value="">Select</option>
                <option value="Local">Local</option>
                <option value="International">International</option>
                <option value="Both">Both</option>
                <option value="None">None</option>
            </select>
        </div>
        <div class="form-group">
            <label for="LandUseImpact">Do you have a direct impact on land use (e.g., farming, mining, construction)?</label>
            <select class="form-control" id="LandUseImpact" name="LandUseImpact" required>
                <option value="">Select</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>

        <!-- Stakeholder & Employee Dynamics -->
        <div class="form-group">
            <label for="EmployeeCount">Approximately how many employees are part of your business/project?</label>
            <input type="number" class="form-control" id="EmployeeCount" name="EmployeeCount" placeholder="e.g., 100" required>
        </div>
        <div class="form-group">
            <label for="CommunityInteraction">Does your business/project directly interact with local communities or vulnerable groups?</label>
            <select class="form-control" id="CommunityInteraction" name="CommunityInteraction" required>
                <option value="">Select</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>

        <!-- Previous Sustainability Initiatives -->
        <div class="form-group">
            <label for="PreviousInitiatives">Has your business/project previously engaged in any sustainability initiatives or certifications?</label>
            <select class="form-control" id="PreviousInitiatives" name="PreviousInitiatives" required>
                <option value="">Select</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>
        <div class="form-group">
            <label for="ExistingGoals">Are there any existing sustainability goals or metrics that your business/project adheres to?</label>
            <textarea class="form-control" id="ExistingGoals" name="ExistingGoals" placeholder="Provide details if any..." rows="3"></textarea>
        </div>

        <!-- Environmental Impact -->
        <div class="form-group">
            <label for="NaturalResourceUse">Does your business/project involve the use of natural resources (e.g., water, minerals)?</label>
            <select class="form-control" id="NaturalResourceUse" name="NaturalResourceUse" required>
                <option value="">Select</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>
        <div class="form-group">
            <label for="EmissionWaste">Are there any processes within your business/project that might produce emissions or waste?</label>
            <select class="form-control" id="EmissionWaste" name="EmissionWaste" required>
                <option value="">Select</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
